<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimaryDark">
    
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:id="@+id/toolBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/color_white">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_menu_black_24dp"
                        android:id="@+id/navigatinButtonMainActivity"
                        tools:ignore="VectorDrawableCompat"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/icon_size_small"/>
        
                <TextView
                        android:layout_marginLeft="@dimen/icon_size_small"
                        android:id="@+id/oneWelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/navigatinButtonMainActivity"
                        android:layout_centerInParent="true"
                        android:text="1Wel"
                        android:textSize="16sp"
                        android:textColor="#9f6ea3"
                        android:textStyle="bold"/>
        
                <ImageView
                        android:id="@+id/img_ic_profile"
                        android:src="@drawable/ic_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                       android:layout_toLeftOf="@+id/img_ic_history"
                        android:layout_marginRight="10dp"/>
                <ImageView
                        android:id="@+id/img_ic_history"
                        android:src="@drawable/ic_histroy"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"/>
            </RelativeLayout>
    
            <RelativeLayout
                    android:id="@+id/searchLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolBarLayout"
                    android:background="@color/color_white"
                    android:paddingTop="@dimen/margin_large"
                    android:paddingBottom="@dimen/margin_xxlarge"
                    android:focusableInTouchMode="true">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:id="@+id/searchTitle"
                        android:layout_marginLeft="@dimen/extra_large_30dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="@dimen/icon_size_small"/>
        
                <AutoCompleteTextView
                        android:id="@+id/main_act_Location"
                        android:layout_height="@dimen/margin_xxxxxlarge"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"
                        android:hint="Enter Location"
                        android:layout_marginLeft="@dimen/margin_xxxxxxlarge"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/searchTitle"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:visibility="visible"
                        android:drawableLeft="@drawable/ic_map"
                        android:paddingLeft="@dimen/margin_xxxxlarge"
                        android:background="@drawable/stroke_background">
                </AutoCompleteTextView>
        
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main_act_Location"
                        android:weightSum="2"
                        android:orientation="horizontal">
            
                    <AutoCompleteTextView
                            android:id="@+id/main_act_enter_items"
                            android:layout_height="@dimen/margin_xxxxxlarge"
                            android:imeOptions="actionNext"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:maxLines="1"
                            android:fontFamily="sans-serif-light"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:hint="Enter Items"
                            android:drawableLeft="@drawable/ic_search"
                            android:layout_marginLeft="@dimen/margin_xxxxlarge"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:visibility="visible"
                            android:paddingLeft="@dimen/margin_xxxxlarge"
                            android:background="@drawable/stroke_background">
                    </AutoCompleteTextView>
            
                    <TextView
                            android:padding="@dimen/margin_large"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginTop="@dimen/margin_large"
                            android:text="Go"
                            android:textAllCaps="false"
                            android:background="@drawable/gradient_background"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/margin_large"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"/>
        
                </LinearLayout>
    
            </RelativeLayout>
    
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/searchLayout"
                     android:orientation="vertical">
                
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:layout_margin="@dimen/margin_large"
                        android:background="@drawable/bg_img" >
    
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_large"
                            android:text="Visit"
                            android:textAllCaps="false"
                            android:background="@drawable/gradient_background"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/margin_large"
                            android:layout_marginBottom="@dimen/margin_xlarge"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_xxxlarge"
                            android:paddingRight="@dimen/margin_xxxlarge"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:paddingTop="@dimen/card_radius_8dp"
                            android:paddingBottom="@dimen/card_radius_8dp"/>
                    
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matrimony"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/margin_xxlarge"
                            android:layout_marginTop="@dimen/margin_xxlarge"
                            android:layout_marginLeft="@dimen/margin_xxlarge"/>
                </RelativeLayout>
                
                <TextView
                        android:id="@+id/viewAllHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Advertisements that we offers for :"
                        android:layout_margin="@dimen/margin_large"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="18dp"/>
                
                <LinearLayout
                        android:id="@+id/viewAllLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="4"
                            android:layout_height="wrap_content">
                        
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                            
                            <ImageView
                                    android:id="@+id/img_ic_tailor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                     android:src="@drawable/ic_tailor"/>
                            <TextView
                                    android:layout_alignBottom="@+id/img_ic_tailor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_color"
                                    android:text="Tailor"
                                  android:layout_centerHorizontal="true"/>
                            
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
        
                            <ImageView
                                    android:id="@+id/img_ic_beauty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_beauty"/>
                            <TextView
                                    android:layout_alignBottom="@+id/img_ic_beauty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_color"
                                    android:text="Beauty"
                                    android:layout_centerHorizontal="true"/>
    
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
        
                            <ImageView
                                    android:id="@+id/img_ic_shoes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_shoes"/>
                            <TextView
                                    android:layout_alignBottom="@+id/img_ic_shoes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_color"
                                    android:text="Shoes"
                                    android:layout_centerHorizontal="true"/>
    
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
        
                            <ImageView
                                    android:id="@+id/img_ic_stationary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_stationary"/>
                            <TextView
                                    android:layout_alignBottom="@+id/img_ic_stationary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_color"
                                    android:text="Stationary"
                                    android:layout_centerHorizontal="true"/>
    
                        </RelativeLayout>
                        
                    </LinearLayout>
    
    
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="4"
                            android:layout_height="wrap_content">
        
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
            
                            <ImageView
                                    android:id="@+id/img_ic_furniture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_furniture"/>
                            <TextView
                                    android:layout_alignBottom="@+id/img_ic_furniture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_color"
                                    android:text="Furniture"
                                    android:layout_centerHorizontal="true"/>
        
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
            
                            <ImageView
                                    android:id="@+id/img_ic_home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_home"/>
                            <TextView
                                    android:layout_alignBottom="@+id/img_ic_home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_color"
                                    android:text="Home"
                                    android:layout_centerHorizontal="true"/>
        
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
            
                            <ImageView
                                    android:id="@+id/img_ic_electronics"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_electronics"/>
                            <TextView
                                    android:layout_alignBottom="@+id/img_ic_electronics"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_color"
                                    android:text="Electronics"
                                    android:layout_centerHorizontal="true"/>
        
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
            
                            <ImageView
                                    android:id="@+id/img_ic_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_all"/>
                            <TextView
                                    android:layout_alignBottom="@+id/img_ic_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_color"
                                    android:text="See All"
                                    android:layout_centerHorizontal="true"/>
        
                        </RelativeLayout>
    
                    </LinearLayout>
                    
                    
                    
                </LinearLayout>
    
            </LinearLayout>
        </LinearLayout>
        
    </ScrollView>

   
    
    
    
</RelativeLayout>