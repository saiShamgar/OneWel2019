<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Promoter.PromoterSignUp"
    android:background="@color/act_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_ic_close_customer"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"
                    android:layout_marginTop="@dimen/margin_xxxlarge"
                    android:layout_marginRight="@dimen/margin_xxxxlarge"/>

                <TextView
                    android:id="@+id/txt_add_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_ic_close_customer"
                    android:text="Customer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/margin_xxxxlarge"
                    android:layout_centerHorizontal="true"/>

                <android.support.v7.widget.CardView
                    android:layout_below="@+id/txt_add_heading"
                    android:id="@+id/signup_layout_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/margin_xlarge"
                    app:cardBackgroundColor="@color/color_white"
                    app:cardElevation="3dp"
                    android:layout_marginTop="@dimen/margin_xxxxxxlarge"
                    android:layout_marginRight="@dimen/margin_xxxxlarge"
                    android:layout_marginLeft="@dimen/margin_xxxxlarge"
                    android:layout_marginBottom="@dimen/margin_xxxlarge">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_xxlarge"
                        android:focusableInTouchMode="true">

                        <EditText
                            android:textSize="16dp"
                            android:id="@+id/edt_name_customer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_xxxxxxlarge"
                            android:layout_marginLeft="@dimen/margin_xxxxxlarge"
                            android:layout_marginRight="@dimen/margin_xxxlarge"
                            android:hint="Add Name"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:textColorHint="@color/font_color"
                            android:backgroundTint="@color/font_heading"/>

                        <ImageView
                            android:id="@+id/img_name_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_name"
                            android:layout_marginTop="60dp"/>

                        <EditText
                            android:textSize="16dp"
                            android:id="@+id/edt_total_price_customer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_name_customer"
                            android:layout_marginTop="@dimen/margin_xxxxlarge"
                            android:layout_marginLeft="@dimen/margin_xxxxxlarge"
                            android:layout_marginRight="@dimen/margin_xxxlarge"
                            android:hint="Total Price"
                            android:inputType="number"
                            android:maxLength="10"
                            android:imeOptions="actionNext"
                            android:textColorHint="@color/font_color"
                            android:backgroundTint="@color/font_heading"/>

                        <ImageView
                            android:id="@+id/img_phone_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_money"
                            android:layout_below="@+id/img_name_icon"
                            android:layout_marginTop="@dimen/margin_xxxxxlarge"/>

                        <EditText
                            android:textSize="16dp"
                            android:id="@+id/edt_discount_price_customer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_total_price_customer"
                            android:layout_marginTop="@dimen/margin_xxxxlarge"
                            android:layout_marginLeft="@dimen/margin_xxxxxlarge"
                            android:layout_marginRight="@dimen/margin_xxxlarge"
                            android:hint="Discount price"
                            android:inputType="number"
                            android:maxLength="10"
                            android:imeOptions="actionDone"
                            android:textColorHint="@color/font_color"
                            android:backgroundTint="@color/font_heading"/>

                        <ImageView
                            android:id="@+id/img_ref_num_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_discount"
                            android:layout_below="@+id/img_phone_icon"
                            android:layout_marginTop="@dimen/margin_xxxxxlarge"/>

                        <EditText
                            android:textSize="16dp"
                            android:id="@+id/edt_discription_customer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_discount_price_customer"
                            android:layout_marginTop="@dimen/margin_xxxxlarge"
                            android:layout_marginLeft="@dimen/margin_xxxxxlarge"
                            android:layout_marginRight="@dimen/margin_xxxlarge"
                            android:hint="Discount price"
                            android:inputType="number"
                            android:maxLength="10"
                            android:imeOptions="actionDone"
                            android:textColorHint="@color/font_color"
                            android:backgroundTint="@color/font_heading"/>



                        <ImageView
                            android:id="@+id/img_shop_category_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_descripation"
                            android:layout_below="@+id/img_ref_num_icon"
                            android:layout_marginTop="@dimen/margin_xxxxxlarge"/>


                        <Button
                            android:id="@+id/btn_next_customer_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_discription_customer"
                            android:background="@drawable/gradient_background"
                            android:layout_marginTop="@dimen/margin_xxxxxxlarge"
                            android:layout_marginBottom="@dimen/margin_xxxlarge"
                            android:layout_marginLeft="@dimen/margin_xxxlarge"
                            android:layout_marginRight="@dimen/margin_xxxlarge"
                            android:text="Next"
                            android:textColor="@color/color_white"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/bg_customerr"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="130dp"/>
        </FrameLayout>

    </ScrollView>


</RelativeLayout>