<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".Activities.Matrimony.MatrimonyRegistration"
		android:background="@color/act_background">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="2"
			android:padding="@dimen/margin_large"
			android:gravity="center"
			android:background="@color/color_white">
		
		<ImageView android:layout_width="0dp"
		           android:layout_height="match_parent"
		           android:layout_weight="0.3"
		           android:src="@drawable/ic_back"
		           android:padding="@dimen/card_radius_8dp"/>
		<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1.7"
				android:padding="@dimen/margin_large"
				android:text="Matrimony Registration"
				android:textColor="@color/color_black"
				android:textStyle="bold"
				android:textSize="16dp"/>
	
	</LinearLayout>
	
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:focusableInTouchMode="true">
			
			<android.support.v7.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cardBackgroundColor="@color/color_white"
					app:cardCornerRadius="@dimen/card_radius_8dp"
					android:layout_marginTop="@dimen/margin_large"
					android:layout_marginBottom="@dimen/margin_large"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp">
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
					<TextView android:layout_width="match_parent"
					          android:layout_height="wrap_content"
					          android:text="1.Personal details"
					          android:layout_margin="@dimen/margin_large"
					          android:textColor="@color/color_black"
					          android:textStyle="bold"/>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp">
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Name :"/>
						<EditText
								android:id="@+id/edt_mat_reg_name"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"
								android:singleLine="true"
								android:imeOptions="actionNext"
								android:inputType="text"
								android:ellipsize="end"/>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/card_elevation_4dp">
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Surname :"/>
						<EditText
								android:id="@+id/edt_mat_reg_surname"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"
								android:singleLine="true"
								android:ellipsize="end"
								android:imeOptions="actionNext"
								android:inputType="text"/>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/card_elevation_4dp">
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Phone No :"/>
						<EditText
								android:id="@+id/edt_mat_reg_phone_num"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"
								android:singleLine="true"
								android:ellipsize="end"
								android:imeOptions="actionDone"
								android:inputType="number"
								android:maxLength="10"/>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="3"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/card_radius_8dp">
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:textStyle="bold"
								android:text="Gender :"
								android:layout_gravity="center"/>
						<RadioGroup
								android:id="@+id/edt_mat_reg_gender"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="2"
								android:weightSum="2"
								android:orientation="horizontal">
							<RadioButton
									android:id="@+id/gender_male"
									android:layout_width="0dp"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:text="Male"/>
							<RadioButton
									android:id="@+id/gender_female"
									android:layout_width="0dp"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:text="Female"/>
						</RadioGroup>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/margin_large">
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Age :"
								android:singleLine="true"
								android:ellipsize="end"/>
						<Spinner
								android:id="@+id/edt_mat_reg_age"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="3"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/margin_large">
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.6"
								android:textStyle="bold"
								android:text="Height :"
								android:singleLine="true"
								android:ellipsize="end"/>
						<Spinner
								android:id="@+id/edt_mat_reg_height_in_feet"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
						<Spinner
								android:id="@+id/edt_mat_reg_heightin_inch"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/card_elevation_4dp">
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:textStyle="bold"
								android:text="Marital Status :"
								android:layout_marginBottom="@dimen/card_elevation_4dp"/>
						<RadioGroup
								android:id="@+id/edt_mat_reg_marital_status"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:weightSum="4"
								android:orientation="horizontal"
								android:layout_margin="@dimen/card_elevation_4dp">
							<RadioButton
									android:id="@+id/radio_single"
									android:layout_width="0dp"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:text="Single"
									android:ellipsize="end"
									android:singleLine="true"/>
							<RadioButton
									android:id="@+id/radio_divorced"
									android:layout_width="0dp"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:text="Divorced"
									android:ellipsize="end"
									android:singleLine="true"/>
							<RadioButton
									android:id="@+id/radio_widowed"
									android:layout_width="0dp"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:text="Widowed"
									android:ellipsize="end"
									android:singleLine="true"/>
							<RadioButton
									android:id="@+id/radio_separated"
									android:layout_width="0dp"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:text="Separated"
									android:singleLine="true"
									android:ellipsize="end"/>
						</RadioGroup>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/card_radius_8dp">
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Religion :"/>
						<Spinner
								android:id="@+id/edt_mat_reg_religion"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/card_radius_8dp">
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Mother Tongue :"
								android:singleLine="true"
								android:ellipsize="end"/>
						<Spinner
								android:id="@+id/edt_mat_reg_mother_tongue"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/margin_large">
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Caste/division :"
								android:singleLine="true"
								android:ellipsize="end"/>
						<Spinner
								android:id="@+id/edt_mat_reg_caste_devision"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					</LinearLayout>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/card_elevation_4dp">
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:textStyle="bold"
								android:text="Physical Status :"
								android:layout_marginBottom="@dimen/card_elevation_4dp"/>
						<RadioGroup
								android:id="@+id/edt_mat_reg_physical_status"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:weightSum="2"
								android:orientation="horizontal"
								android:layout_margin="@dimen/card_radius_8dp">
							<RadioButton
									android:id="@+id/radio_normal"
									android:layout_width="0dp"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:text="Normal"
									android:ellipsize="end"
									android:singleLine="true"/>
							<RadioButton
									android:id="@+id/radio_physically_cahllenged"
									android:layout_width="0dp"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:text="Physically Challenged"
									android:ellipsize="end"
									android:singleLine="true"/>
						</RadioGroup>
					</LinearLayout>
				</LinearLayout>
			
			</android.support.v7.widget.CardView>
			
			<android.support.v7.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cardBackgroundColor="@color/color_white"
					app:cardCornerRadius="@dimen/card_elevation_4dp"
					android:layout_marginTop="@dimen/margin_large"
					android:layout_marginBottom="@dimen/margin_large"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp">
				
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
					
					<TextView android:layout_width="match_parent"
					          android:layout_height="wrap_content"
					          android:text="2. Educational and Career"
					          android:layout_margin="@dimen/margin_large"
					          android:textColor="@color/color_black"
					          android:textStyle="bold"/>
					
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/margin_large">
						
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Highest Education :"
								android:singleLine="true"
								android:ellipsize="end"/>
						
						<Spinner
								android:id="@+id/edt_mat_reg_highest_study"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					
					</LinearLayout>
					
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/card_radius_8dp">
						
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Profession :"
								android:singleLine="true"
								android:ellipsize="end"/>
						
						<AutoCompleteTextView
								android:id="@+id/edt_mat_reg_occupation"
								android:layout_width="0dp"
								android:imeOptions="actionDone"
								android:ellipsize="end"
								android:singleLine="true"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					
					</LinearLayout>
					
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/margin_large">
						
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Annual Income :"
								android:singleLine="true"
								android:ellipsize="end"/>
						
						<Spinner
								android:id="@+id/edt_mat_reg_annual_income"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					
					</LinearLayout>
					
				
				
				
				</LinearLayout>
			
			</android.support.v7.widget.CardView>
			
			<android.support.v7.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cardBackgroundColor="@color/color_white"
					app:cardCornerRadius="@dimen/card_elevation_4dp"
					android:layout_marginTop="@dimen/margin_large"
					android:layout_marginBottom="@dimen/margin_large"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp">
				
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
					<TextView android:layout_width="match_parent"
					          android:layout_height="wrap_content"
					          android:text="3. Location Details"
					          android:layout_margin="@dimen/margin_large"
					          android:textColor="@color/color_black"
					          android:textStyle="bold"/>
					
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/margin_large">
						
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="Country :"
								android:singleLine="true"
								android:ellipsize="end"/>
						
						<Spinner
								android:id="@+id/edt_mat_reg_country"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					
					</LinearLayout>
					
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/card_radius_8dp">
						
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="State :"
								android:singleLine="true"
								android:ellipsize="end"/>
						
						<Spinner
								android:id="@+id/edt_mat_reg_state"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					
					</LinearLayout>
					
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/margin_large">
						
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="District :"
								android:singleLine="true"
								android:ellipsize="end"/>
						
						<Spinner
								android:id="@+id/edt_mat_reg_district"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					
					</LinearLayout>
					
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:weightSum="2"
							android:orientation="horizontal"
							android:layout_marginLeft="@dimen/margin_xxlarge"
							android:layout_marginRight="@dimen/margin_xxlarge"
							android:layout_marginTop="@dimen/card_radius_8dp"
							android:layout_marginBottom="@dimen/margin_large">
						
						<TextView
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="0.8"
								android:textStyle="bold"
								android:text="City/Division :"
								android:singleLine="true"
								android:ellipsize="end"/>
						
						<EditText
								android:id="@+id/edt_mat_reg_city"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1.2"/>
					
					</LinearLayout>
				
				
				
				
				</LinearLayout>
			
			</android.support.v7.widget.CardView>
			
			<android.support.v7.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cardBackgroundColor="@color/color_white"
					app:cardCornerRadius="@dimen/card_elevation_4dp"
					android:layout_marginTop="@dimen/margin_large"
					android:layout_marginBottom="@dimen/margin_large"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp">
				
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
					<TextView android:layout_width="match_parent"
					          android:layout_height="wrap_content"
