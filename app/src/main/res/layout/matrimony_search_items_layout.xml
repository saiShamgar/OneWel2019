<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="130dp"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		app:cardBackgroundColor="@color/color_white"
		app:cardCornerRadius="@dimen/card_elevation_4dp"
		app:cardElevation="2dp"
		android:layout_margin="@dimen/card_elevation_4dp">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">
		
		<ImageView
				android:id="@+id/mat_search_image"
				android:layout_width="100dp"
				android:layout_height="match_parent"
				android:scaleType="centerCrop"/>
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:weightSum="4"
				android:orientation="vertical"
				android:padding="@dimen/margin_large">
			
			<TextView
					android:id="@+id/mat_search_name"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:text="Name"
					android:textSize="18dp"
					android:singleLine="true"
					android:ellipsize="end"
					android:textColor="@color/color_black"
					android:gravity="center_vertical"/>
			<TextView
					android:id="@+id/mat_search_age"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:text="Age"
					android:singleLine="true"
					android:ellipsize="end"
					android:gravity="center_vertical"/>
			
			<TextView
					android:id="@+id/mat_search_profession"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:text="Profession"
					android:singleLine="true"
					android:ellipsize="end"
					android:gravity="center_vertical"/>
			
			<TextView
					android:id="@+id/mat_search_location"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:text="Location"
					android:singleLine="true"
					android:ellipsize="end"
					android:gravity="center_vertical"/>
			
		</LinearLayout>
		
		
	</LinearLayout>
</android.support.v7.widget.CardView>